<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_marker_info"
    android:visibility="gone"
    android:layout_width="fill_parent"
    android:layout_height="220dp"
    android:layout_alignParentBottom="true"
    android:background="@mipmap/bg_pop_carinfo_detail"
    android:clickable="true"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/info_img"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:alpha="1.0"
        android:background="@drawable/map_image_border_white"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@mipmap/default1"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_map_bottom">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textColor="#FFF5EB" />

            <TextView
                android:id="@+id/info_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完好"
                android:textColor="#FFF5EB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/content"
                android:text="报修"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/close"
                android:text="关闭"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
